# Streamlit Cloud Secrets Configuration
# Copy this file to secrets.toml and fill in your actual values
#
# For Streamlit Cloud:
# - Go to your app settings
# - Click "Secrets" in the left sidebar
# - Paste the contents below with your real values

# OpenAI API Configuration
[openai]
api_key = "sk-your-openai-api-key-here"

# Admin Settings
[admin]
pin = "1234"  # CHANGE THIS to a secure PIN!

# Optional: Default child profile
[profile]
child_name = "Little Star"
age = 7
pronouns = "she/her"
# interests as comma-separated values
interests = "space,animals,stars"

# Neon Database Configuration (for persistent data storage)
[database]
url = "postgresql://username:password@your-neon-host.neon.tech/your-database-name?sslmode=require"
